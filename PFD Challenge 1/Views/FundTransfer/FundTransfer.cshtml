@*
    *Main page for transfer
    Remember to declare model used
*@

@model PFD_Challenge_1.Models.FundTransferVM

@section css{
    @*Add specific css script here*@
    <link rel="stylesheet" href="~/css/futuretransfer.css" />
}
<div class="container" id="mainContainer2">
    <div class="first-container">
        <div style="text-align: center; margin-top:10%">
            <img id="imgLogo" src="~/images/Home Page (after login).jpeg"
                 style="width: 70%" />
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col text-center">
            <div class="container">
                <form>
                    <div class="form-group" style="color: white">
                        <label for="balance">What you have (SGD)</label>
                        <div>@Html.DisplayFor(model => model.account.Balance)</div>
                    </div>
                    <div class="form-group" style="color: white">
                        <label for="activity">Your activity</label>
                        @{ if (Model.transactions.Amount == 0)
                            {
                                <div>No transactions</div>
                            }
                            else
                            {
                                <div><span>@Html.DisplayFor(model => model.transactions.TimeTransfer)</span> $<span>@Html.DisplayFor(model => model.transactions.Amount)</span></div>
                            }

                        }
                    </div>
                </form>
            </div>
            <!-- Login Button -->
            <div class="every" style="padding-top: 20px; padding-right: 20px; padding-left: 20px; display: inline-block;">
                <div class="btn">@Html.ActionLink("Make a Transfer", "FundTransferReview", "FundTransfer")</div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @*Add JavaScripts specifically for this view here*@
    <script src="~/js/futuretransfer.js"></script>
}


