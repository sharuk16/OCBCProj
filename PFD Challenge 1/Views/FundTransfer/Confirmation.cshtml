@*
    View for Transaction Confirmation
*@

@section css{
    @*Add specific css script here*@
    <link rel="stylesheet" href="~/css/futuretransfer.css" />
}

@model PFD_Challenge_1.Models.TransferConfirmation
<form asp-action="Confirmation" style="text-align: center">
    <div class="container">
        <div class="form-group form-check-inline" style="padding-top: 0px; padding-right: 115px; padding-left: 115px; display: inline-block;">
            <div class="form-group" style="color: white">
                <div class="to" style="padding-top: 2px;">
                    <div class="to" style="background-color: #AA1945">To</div>
                </div>
                <div class="input" style="padding-top: 2px; padding-bottom: 0px; padding-right: 115px; padding-left: 115px; display: inline-block;">
                    <input asp-for="Recipient" type="text" readonly class="form-control" id="to" style="background-color: #E7625F; border: transparent; color: white; text-align: center;">
                </div>
            </div>
        </div>
        <div class="form-group form-check-inline" style="padding-top: 0px; padding-right: 115px; padding-left: 115px; display: inline-block;">
            <div class="form-group" style="color: white">
                <div class="transferamount" style="padding-top: 2px;">
                    <div class="transferamount" style="background-color: #AA1945">Transfer Amount</div>
                </div>
                <div class="input" style="padding-top: 2px; padding-bottom: 0px; padding-right: 115px; padding-left: 115px; display: inline-block;">
                    <input asp-for="TransferAmount" type="text" readonly class="form-control" id="transfer" style="background-color: #E7625F; border: transparent; color: white; text-align: center;">
                </div>
            </div>
        </div>
        <div>
            <input hidden readonly asp-for="BankAccount" />
            <input hidden readonly asp-for="FutureTransfer" />
        </div>
        @if (Model.FutureTransfer == "false")
        {
            <div id="futureTime">
                <label asp-for="TimeTransfer" class="form-label"></label>
                <div>Immediate</div>
            </div>
        }
        else
        {
            <div id="futureTime">
                <label asp-for="TimeTransfer" class="form-label"></label>
                <input asp-for="TimeTransfer" readonly />
            </div>
        }


    </div>
    <div><button action="submit">Confirm Transfer</button></div>
</form>